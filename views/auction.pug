extends layout

block content

    script.
        $( document ).tooltip();

    div.w3-center
        div.w3-center.w3-padding-16.w3-xlarge
            h1 AUCTION
            table
                tr(class='lib_manager')
                    th(class="td_man")
                        input(type='button', value='Начать аукцион', class='man_button', id='start_auction', onclick="start()")
                    th(class="td_man")
                        input(type='button', value='Галерея', class='man_button', id='gallery_btn', onclick="redirect(" + "\"gallery\"" + ")")
                    th(class="td_man")
                        input(type='button', value='Настройки аукциона', class='man_button', id='add_btn', onclick="redirect(" + "\"options\"" + ")")
                    th(class="td_man")
                        input(type='button', value='Настройки участников', class='man_button', id='members_btn', onclick="redirect(" + "\"members\"" + ")")
                    th(class="td_man")
                        input(type='button', value='Продать', class='man_button', id='sale', onclick="sale()")
        br

        div.w3-main.w3-center.scroll_gallery
            div.w3-card-2.w3-margin-right.w3-left.leftbox.w3-padding-16 Сообщения
                div.w3-left-align.w3-padding-16.scrollable(id="news_tab" style="max-height:96%")
            div.w3-card-2.w3-margin-right.w3-left.leftbox.w3-padding-16 Участники
                each mem in members
                    div.w3-card.w3-margin
                        button.w3-btn(value=mem.name onclick="goto(\"" + mem.name + "\" " + "," + mem.money +" )" border=0)=mem.name

            div.w3-card-2.w3-padding-16.w3-center(style="height:100%; display: inline-block")
                div.w3-display-container(id='pictures' style="width: 960px; height: 540px")
                    each picture in pictures
                        if picture.involved
                            div.slide
                                a(href='picture/'+picture.id)
                                    img(src=picture.url style="width: 960px; height: 540px")
                    button.w3-button.w3-display-left.w3-black(onclick="plusDivs(-1)") &#10094;
                    button.w3-button.w3-display-right.w3-black(onclick="plusDivs(1)") &#10095;
                    if pictures[0].sold !== false
                        div.w3-card-2.w3-red.sold.w3-quarter.w3-display-topleft(id="sold_check" title=pictures[0].sold)="Продано"
                    else
                        div.w3-card-2.w3-red.sold.w3-quarter.w3-display-topleft(id="sold_check")
                    div.w3-center(style="padding:10px" id="infoaboutpict")="Название: " +pictures[0].name + ", автор: " + pictures[0].author + " цена: " + pictures[0].start_price

    <script src="/socket.io/socket.io.js"></script>
    //script
      //  include ../dist/bundle.js
    script
        include ../public/javascripts/slider.js
        include ../public/javascripts/auction_log.js
        include ../public/javascripts/goto.js
        include ../public/javascripts/check.js
