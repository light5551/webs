extends layout

block content
    div.w3-center
        div.w3-center.w3-padding-16.w3-xlarge
            h1 GALLERY
            table
                tr(class='lib_manager')
                    th(class="td_man")
                        input(type='button', value='Настройки аукциона', class='man_button', id='add_btn', onclick="redirect(" + "\"options\"" + ")")
                    th(class="td_man")
                        input(type='button', value='Участники', class='man_button', id='members_btn', onclick="redirect(" + "\"members\"" + ")")

        br

        div.w3-main.w3-content.w3-padding(style="max-width:1250px")
            div.w3-row-padding.w3-padding.w3-center(id='pictures')
                each picture in pictures
                    div.w3-quarter(style="height:500px; width:380px")
                        a(href='picture/'+picture.id)
                            if picture.involved
                                img(src=picture.url style="width:100%; max-height:210px; border: 5px solid red")
                            else
                                img(src=picture.url style="width:100%; max-height:210px; border: 5px solid white")
                        h1= picture.name
                        p= picture.description