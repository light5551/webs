extends layout

block content
    div.w3-top
        div.w3-center.w3-padding-16.w3-xlarge
            h1 GALLERY
            table
                tr(class='lib_manager')
                    th(class="td_man")
                        input(type='button', value='Информация об аукционе', class='man_button', id='add_btn', onclick="redirect(" + "\"\"" + ")")
                    th(class="td_man")
                        input(type='button', value='Участники', class='man_button', id='members_btn', onclick="redirect(" + "\"members\"" + ")")

        br

        div.w3-main.w3-content.w3-padding(style='max-width:1200px;margin-top:100px')
            div.w3-row-padding.w3-padding.w3-center(id='pictures')
                each picture in pictures
                    div.w3-quarter
                        a(href='picture/'+picture.id style="width:100%")
                            img(src=picture.url style="width:100%")
                        h1= picture.name
                        p= picture.description